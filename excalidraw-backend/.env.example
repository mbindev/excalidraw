# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration (postgres is the service name in docker-compose)
DB_NAME=excalidraw
DB_USER=postgres
DB_PASSWORD=change_this_secure_postgres_password

# JWT Configuration (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=change_this_to_a_very_secure_random_secret_key

# CORS Configuration
CORS_ORIGIN=https://draw.mbin.pk

# Initial Admin User (created during first migration)
ADMIN_EMAIL=admin@mbin.pk
ADMIN_PASSWORD=ChangeThisSecurePassword123!
ADMIN_NAME=Admin User
